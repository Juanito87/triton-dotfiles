#!/bin/bash
# Variables de entorno para terminales

# vim as the default editor
export EDITOR='nvim'

# Colored GCC warnings and errors
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# Colors for ls
LS_COLORS=$LS_COLORS:'pi=33:bd=33;01:cd=33;01:su=31;01:sg=33:tw=32:ow=34:st=34:'
export LS_COLORS

# Exporting personalized commands to path
export PATH=~/.shell_config/commands:$PATH

# Exporting cargo bin to path
export PATH=~/.cargo/bin:$PATH

# Starship
export STARSHIP_CONFIG=~/.shell_config/starship.toml

# kubectl vars
export KUBECONFIG=/workspaces/talos-nyc1-kubeconfig

# Setup fzf and nvim
export PATH="$HOME/.fzf/bin:$PATH"
export PATH="/opt/nvim/bin/:$PATH"
